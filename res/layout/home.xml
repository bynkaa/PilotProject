<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/navBar"
            android:layout_gravity="left|center_vertical">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/MyFavorite_btn_option"
                android:id="@+id/btNavigationDrawer"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/Home_buttonNotification"
                android:id="@+id/btNotification"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/btNavigationDrawer"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvHome"
                android:textStyle="bold"
                android:id="@+id/textView" android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/btNavigationDrawer" android:singleLine="false"
                android:textColor="@android:color/white" android:textSize="@dimen/tvHome"/>
    </RelativeLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="content feeds"
            android:textStyle="bold"
            android:textSize="24"
            android:background="@android:color/background_dark"
            android:id="@+id/tvContentFeed" android:layout_gravity="left|center_vertical" android:typeface="sans"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/listView"
            android:layout_gravity="left|center_vertical"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button"
            android:layout_gravity="center"
            android:background="@drawable/Home_buttonRecorder"/>
</LinearLayout>